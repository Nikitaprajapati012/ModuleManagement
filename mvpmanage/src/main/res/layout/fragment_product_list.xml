<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:padding="@dimen/_1sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/fragment_product_list_txtproductname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="productname" />

                <TextView
                    android:id="@+id/fragment_product_list_txtproductprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1500000" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_product_list_txtproductdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1"
                android:text="this is nice one." />

            <TextView
                android:id="@+id/fragment_product_list_txtsubtotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=""
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_product_list_imgadd"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:padding="@dimen/_7sdp"
            android:visibility="gone"
            android:src="@drawable/add" />

        <LinearLayout
            android:id="@+id/fragment_product_list_layoutquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_product_list_imgquantity_up"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/uparrow" />

            <EditText
                android:id="@+id/fragment_product_list_edquantity"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/fragment_product_list_imgquantity_down"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/downarrow" />
        </LinearLayout>
        sss
        <ImageView
            android:id="@+id/fragment_product_list_imgcancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/cross" />

    </LinearLayout>
</LinearLayout>